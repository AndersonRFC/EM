@model AlunoViewModel
@{
	ViewData["Title"] = "Aluno";
}

<h1>Alunos</h1>
<br />
<br />

<a class = "btn btn-success" asp-controller="Aluno" asp-action="Editar">Cadastrar Aluno</a>
<br />
<br />

<form asp-controller="Aluno" asp-action="Index" method="get">
	<p>
		<label>
			<input type="radio" asp-for="SearchType" value="id" checked/> Filtrar por ID
		</label>

		<label>
			<input type="radio" asp-for="SearchType" value="nome" /> Filtrar por nome
		</label>
	</p>
	<p>
		Filtro: <input type="text" asp-for="SearchString" />
		<input type="submit" value="Filter" />
	</p>
</form>

<table class="table table-striped table-hover">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Alunos![0].Matricula)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Alunos![0].Nome)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Alunos![0].CPF)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Alunos![0].Nascimento)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Alunos![0].Sexo)
			</th>
			<th></th>
		</tr>
	</thead>

	<tbody>

		@foreach(var aluno in Model.Alunos!)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => aluno.Matricula)
				</td>
				<td>
					@Html.DisplayFor(modelItem => aluno.Nome)
				</td>
				<td>
					@Html.DisplayFor(modelItem => aluno.CPF)
				</td>
				<td>
					@Html.DisplayFor(modelItem => aluno.Nascimento)
				</td>
				<td>
					@Html.DisplayFor(modelItem => aluno.Sexo)
				</td>
				<td>
					<a class="btn btn-primary" asp-controller="Aluno" asp-action="Editar" asp-route-id="@aluno.Matricula">Editar</a>
					<a class="btn btn-warning" asp-controller="Aluno" asp-action="Excluir" asp-route-id="@aluno.Matricula">Excluir</a>
				</td>
			</tr>
		}
	</tbody>
</table>