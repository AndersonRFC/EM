@model Aluno
@{
	ViewData["title"] = Model is null || Model.Matricula == 0 || Model.Matricula is null ? "Cadastrar" : "Editar" + " Aluno";
}

<h1>@(Model is null || Model.Matricula == 0 || Model.Matricula is null ? "Cadastrar" : "Editar")</h1>
<hr />

<div class="row">

	<div class="col-md-4">

		<form asp-action="@(Model is null || Model.Matricula == 0 || Model.Matricula is null ? "Cadastrar" : "Editar")" method="post">

			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			@if(Model is not null || Model?.Matricula != 0)
			{
				<input asp-for="Matricula" type="hidden"/>				
			}
			<div class="form-group">
				<label asp-for="Nome" class="control-label"></label>
				<input id="nomeInput" asp-for="Nome" class="form-control" />
				<span asp-validation-for="Nome" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="CPF" class="control-label"></label>
				<input id="cpfInput" asp-for="CPF" class="form-control"/>
				<span asp-validation-for="CPF" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Nascimento" class="control-label"></label>
				<input min="1800-01-01" max="2199-12-31" asp-for="Nascimento" class="form-control"/>
				<span asp-validation-for="Nascimento" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Sexo" class="control-label"></label>
				<select asp-for="Sexo" class="form-control">
					<option value="Masculino">Masculino</option>
					<option value="Feminino">Feminino</option>
				</select>
				<span asp-validation-for="Sexo" class="text-danger"></span>
			</div>

			<br />

			<div class="form-group">
				<input type="submit" value="@(Model is null || Model.Matricula == 0 || Model.Matricula is null? "Cadastrar" : "Salvar")" class="btn btn-primary" /> | 
				<a asp-controller="Aluno" asp-action="Index">Voltar para a lista</a>
			</div>

		</form>

	</div>

</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}